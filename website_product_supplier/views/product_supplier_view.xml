<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data noupdate="0">

<template id="product" name="Product">
  <t t-call="website.layout">
      <t t-set="additional_title" t-value="product.name"/>
      <form id="supplier_product" action="/supplier/product/write">
          <div id="wrap">
            <section id="product_detail">
              <div class="row">
                <div class="col-sm-4 col-md-4 col-lg-4">
                    <span t-field="product.image" t-field-options='{"widget": "image", "class": "product_detail_img", "alt-field": "name"}' class="oe_form_field_image_controls"/>
                </div><div class="col-sm-4 col-md-4 col-lg-3 col-lg-offset-1">
                    <h1 t-field="product.name">Product Name</h1>
                    <input type="text" class="form-control" name="product.name" t-attf-value="#{product.name}"/>
                    <hr t-if="product.description_sale"/>
                    <input type="text" class="form-control" name="product.description_sale" t-attf-value="#{product.description_sale}"/>
                    <div><p t-field="product.description_sale" class="text-muted"/></div>
                    <hr/>
                </div>
              </div>
              <div>
                <input type="text" class="form-control" name="product.price" t-attf-value="#{product.price}"/>
                <input type="text" class="form-control" name="product.list_price" t-attf-value="#{product.list_price}"/>
              </div>
            </section>
          </div>
          <div>
              <button type="submit" name="save_product">Save</button>
          </div>
      </form>
  </t>
</template>

